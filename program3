import java.util.Scanner;

public class prog3 {

	public static void main(String[] args) {
		
		Scanner holo= new Scanner(System.in);
		int num;
		boolean W;
		String name;
		W=false;
		
		System.out.println("what is your name:");
		name=holo.toString();
		
		
		
		System.out.println("what number between 0-100:");
		num=holo.nextInt();
		
		
		
		while(W=false) 
		{
			
			if(num>=0&&num<=100)
			{
				System.out.println("thank you "+name);
			}
			
			else if(num<0||num>100) 
			{
				System.out.println("please choose a number between 0 and 100:");
				num=holo.nextInt();
				W=true;
			
		}
		
			
			
		}
		
		for (int j = num; j > 0; j--) {
			System.out.println(j+"seconds left till impact");
		}
		
		
		
		
		

	}

}
